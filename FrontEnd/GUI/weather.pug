Weather
    include Mixins/socket.pug
    include Mixins/stylePackage.pug

    body
        div.widgetWrapper
            div.location weather for
                span.content #{params.location}
            div.temperature #{params.temperature}F
            div.condition #{params.condition}


    style.
        .widgetWrapper {
            display: flex;
            flex-direction: column;
            justify-content: center;
            width: 100%;
            height: 100%;
        }
        .location {
            color: gray;
            font-size: 2.3em;
            text-align: center;
        }
        .location .content {
            color: white;
            font-size: 3.7em;
            text-transform: capitalize;
        }
        .temperature {
            font-size: 18em;
            text-align: center;
        }
        .condition {
            font-size: 7em;
            text-align: center;
        }
    +socketScript()
    +stylePackage()
