Main 
    include Mixins/socket.pug
    include Mixins/stylePackage.pug
    include Mixins/timeWidget.pug
    // params: {
            "user": user,
            "hotwords": [hotword1, hotword2, etc]
        }
    html
        body
            div.topPanelWrapper
                div
                div.timeWrapper
                    +timeWidget()
            div.main
                div Welcome 
                    strong #{params.user}
                div Reminder, your hotwords are: <br />
                    for item, index in params.hotwords
                        if index + 1 != params.hotwords.length
                            span #{item}, 
                        else
                            span and #{item}
            
    style.
        .topPanelWrapper {
            display: flex;
            justify-content: space-between;
            height: 20%;
        }

        .timeWrapper {
            display: flex;
            justify-content: end;
            width: 40%;
        }

        .main {
            display: flex;
            flex-direction: column;
            justify-content: center;
            font-size: 4em;
            text-align: center;
            margin-top: 20%;
        }

    +socketScript()
    +stylePackage()