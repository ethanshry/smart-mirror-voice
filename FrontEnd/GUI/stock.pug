    script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js")

    script.
        let ctx = document.getElementById("stock1").getContext("2d");
        let data = !{JSON.stringify(params.stockData)};
        /*
            data in format [
                {
                    x: new Date()
                    y: datapoint
                }
            ]
        */
        console.log(data.data);
        let stockChart1 = new Chart(ctx, {
            type: 'line',
            data: {
                labels: data.labels.reverse(),
                datasets: [{
                    label: 'one',
                    pointRadius: 0,
                    borderColor: '#0fcc0c',
                    fill: false,
                    data: data.data.reverse()
                }]
            },
            options: {
                title: {
                    display: true,
                    text: data.title,
                    fontColor: '#fff',
                    fontSize: 18
                },
                legend: {display: false},
                scales: {
                    xAxes: [{
                        ticks: {
                            display: false
                        },
                        gridLines: {
                            zeroLineColor: '#fff'
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            fontColor: '#fff',
                            fontSize: 14
                        },
                        gridLines: {
                            zeroLineColor: '#fff'
                        }
                    }]
                }
            }
        });

    +socketScript()