TextDisplay 
    include Mixins/socket.pug
    include Mixins/stylePackage.pug
    html
        body
            div.main
                if 'source' in params
                    div.icon
                        span.typcn.typcn-zoom
                        span #{params.source}
                div.content #{params.text}
            
    style.
        .main {
            display: flex;
            flex-direction: column;
            justify-content: center;
            color: black;
            background-color: white;
            border-radius:15px;

        }

        .content {
            margin: 40px;
            font-size: 2.7em;
            line-height: 1.3;
        }

        .source {
            text-align: right;
            font-size: 1.7em;
        }

        .icon {
            margin: 40px;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #aaaaaa;
        }

        .icon>span {
            font-size: 3em;
            color: #aaaaaa;
            margin-left: 10px;
        }

    +socketScript()
    +stylePackage()

